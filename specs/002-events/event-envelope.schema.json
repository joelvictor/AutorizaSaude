{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://autorizasaude.local/schemas/event-envelope.schema.json",
  "title": "InternalDomainEventEnvelope",
  "type": "object",
  "required": [
    "eventId",
    "eventType",
    "eventVersion",
    "occurredAt",
    "tenantId",
    "correlationId",
    "payload"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid"
    },
    "eventType": {
      "type": "string",
      "pattern": "^EVT-[0-9]{3}$"
    },
    "eventVersion": {
      "type": "integer",
      "minimum": 1
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time"
    },
    "tenantId": {
      "type": "string",
      "format": "uuid"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
